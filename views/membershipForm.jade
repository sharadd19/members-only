extends layout

block content
  
  div.wrapper
    h1 #{title}

    if error.val 
        h3 #{error.message}
    
    form(method='POST' action="/user/membership")
      div.form-group
        div.secret
          label(for="secret") #[strong Secret]: 
          input#secret.form-control(type='text', name='secret' required)  
        div.button-group
          button(type="submit" class="button") Get Membership
    


